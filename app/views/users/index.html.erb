  <main>
    <div class="position-relative">
      <section class="section section-lg section-shaped pb-250">
        <div class="shape shape-style-1 shape-default">
        </div>
        <div class="row">
          <div class="col-md-6 mx-auto">
            <div class="form-group">
              <h3>Search a Dress</h3>
              <%= form_for dresses_path, method: 'get', remote: true do |d| %>
                <div class="input-group mb-4">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-zoom-split-in"></i></span>
                  </div>
                  <%= d.text_field :name, class: "form-control", placeholder: "Search" %>
                  <%= submit_tag "Search", class: "btn btn-sm btn-primary mr-4" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    </div>

    <section class="section section-lg pt-lg-0 mt--200">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-12">
            <div class="row row-grid" id="dress-result">

              <% @dresses.each do |d| %>
              <div class="col-md-3">
                <div class="card card-lift--hover shadow mb-3">
                  <div class="card-body">
                    <%= image_tag(d.images_url, class: "img-fluid rounded shadow") %>
                    <div class="card-body-area">
                      <h6 class="text-primary text-uppercase"><%= d.name %></h6>
                      <span class="badge badge-pill badge-primary">MYR <%= d.price %></span>
                      <span class="badge badge-pill badge-primary">Length <%= d.cm_length %>cm</span>
                      <span class="badge badge-pill badge-primary">Bust <%= d.cm_bust %>cm</span>
                      <span class="badge badge-pill badge-primary">Waist <%= d.cm_waist %>cm</span>
                      <span class="badge badge-pill badge-primary">Hip <%= d.cm_hip %>cm</span>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>

              <!-- To be Paginate -->

            </div>
          </div>
        </div>
      </div>
    </section>
  </main>