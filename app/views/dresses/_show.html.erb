<% @dresses.each do |d| %>
    <div class="col-sm-2 col-md-3">
        <div class="card card-lift--hover shadow mb-3", id="dress-#{d.id}">
            <div class="card-body">

            <% if logged_in? %>
                <i class="ni ni-favourite-28 ml-2 mt-2" style="<%="color:red;" if current_user.dresses.exists?(d.id) %>position:absolute;"></i>
            <% end %>

            <%= image_tag(d.images_url, class: "img-fluid rounded shadow") if d.images_url %>
                <div class="card-body-area">
                    <h6 class="text-primary text-uppercase"><%= d.name %></h6>
                    <h6><%= d.code %></h6>
                    <span class="badge badge-pill badge-primary"><%= d.color %></span>
                    <span class="badge badge-pill badge-primary">Length <%= d.cm_length %>cm</span>
                    <span class="badge badge-pill badge-primary">Bust <%= d.cm_bust %>cm</span>
                    <span class="badge badge-pill badge-primary">Waist <%= d.cm_waist %>cm</span>
                    <span span class="badge badge-pill badge-primary">Hip <%= d.cm_hip %>cm</span>
                </div>
            </div>
        </div>
    </div>
<% end %>




