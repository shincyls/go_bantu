<main>
    <div class="position-relative">
      <section class="section section-lg section-shaped">
        <div class="shape shape-style-1 shape-primary"></div>
        <div class="row justify-content-center">
          <h2 class="text-white display-1">Register New Organization</h2>
        </div>
      </section>

      <section class="section section-lg" style="background-color:whitesmoke;">
      <div class="container p-4 shadow rounded">
        <div class="row justify-content-center">
          <p class="muted-text">Kindly fill in your organization detail carefully, some information cannot be change once submited.</p>
          <div class="col-lg-12">
              <%= form_for(@organizer) do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <h4 class="text-primary">Organization Information</h4>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Name*</h6></div>
                    <div class="col-md-10"><%= f.text_field :company_name, placeholder: "Organization Name (Mandatory)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Description*</h6></div>
                    <div class="col-md-10"><%= f.text_area :description, placeholder: "Organization Description (Mandatory)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Type*</h6></div>
                    <div class="col-md-10"><%= f.text_field :type, placeholder: "Organization Type (Select One)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                    <div class="col-md-4"><h6 class="mt-2">Upload Organization Logo</h6></div>
                    <div class="col-md-8"><%= f.file_field :logo, class: "mt-2" %></div>
                </div>

                <br>

                <h4 class="text-primary">Contact Information</h4>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Phone Number 1*</h6></div>
                    <div class="col-md-4"><%= f.text_field :phone_number1, placeholder: "Phone Number 1", class: "form-control mt-2" %></div>
                    <div class="col-md-2"><h6 class="mt-2">Phone Number 2</h6></div>
                    <div class="col-md-4"><%= f.text_field :phone_number2, placeholder: "Phone Number 2", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Email</h6></div>
                    <div class="col-md-10"><%= f.text_field :email, placeholder: "Organization Email", class: "form-control mt-2" %></div>
                </div>

                <br>

                <h4 class="text-primary">Social Media Link</h4>
                <div class="row">
                  <div class="col-md-2"><h6 class="mt-2">Website</h6></div>
                  <div class="col-md-10"><%= f.text_field :website_url, placeholder: "Website URL (Optional, eg: www.mywebsite.com)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                  <div class="col-md-2"><h6 class="mt-2">Facebook</h6></div>
                  <div class="col-md-10"><%= f.text_field :facebook_url, placeholder: "Facebook URL (Optional, eg: www.facebook.com/mywebsite)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                  <div class="col-md-2"><h6 class="mt-2">Instagram</h6></div>
                  <div class="col-md-10"><%= f.text_field :instagram_url, placeholder: "Instagram URL (Optional, eg: www.instagram.com/mywebsite)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                  <div class="col-md-2"><h6 class="mt-2">Twitter</h6></div>
                  <div class="col-md-10"><%= f.text_field :twitter_url, placeholder: "Twitter URL (Optional, eg: www.twitter.com/mywebsite)", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                  <div class="col-md-2"><h6 class="mt-2">Linkedin</h6></div>
                  <div class="col-md-10"><%= f.text_field :linkedin_url, placeholder: "Linkedin URL (Optional, eg: www.linkedin.com/mywebsite)", class: "form-control mt-2" %></div>
                </div>

                <br>

                <h4 class="text-primary">Location Information</h4>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Address 1</h6></div>
                    <div class="col-md-10"><%= f.text_field :address_1, placeholder: "Address 1", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                    <div class="col-md-2"><h6 class="mt-2">Address 2</h6></div>
                    <div class="col-md-10"><%= f.text_field :address_2, placeholder: "Address 2", class: "form-control mt-2" %></div>
                </div>
                <div class="row">
                    <div class="col-md-1"><h6 class="mt-3">Postcode</h6></div>
                    <div class="col-md-2"><%= f.text_field :postcode, placeholder: "43000", class: "form-control mt-2" %></div>
                    <div class="col-md-1"><h6 class="mt-3">City</h6></div>
                    <div class="col-md-2"><%= f.text_field :city, placeholder: "Petaling Jaya", class: "form-control mt-2" %></div>
                    <div class="col-md-1"><h6 class="mt-3">State</h6></div>
                    <div class="col-md-2"><%= f.text_field :state, placeholder: "Selangor", class: "form-control mt-2" %></div>
                    <div class="col-md-1"><h6 class="mt-3">Country</h6></div>
                    <div class="col-md-2"><%= f.text_field :country, placeholder: "Malaysia", class: "form-control mt-2" %></div>
                </div>

                <br>

                <div class="row justify-content-center">
                  <%= f.submit "Submit New Organization", class: "btn btn-primary" %>
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </section>

  </div>


  </main>


