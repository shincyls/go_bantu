<% flash.each do |type, message| %>
    <div class="alert alert-<%bootstrap_class_for(type) %> alert-dismissible fade show" role="alert">
    <span class="alert-inner--text"> <% message %> </span>
    
    </div>
<% end %>


<!-- Devise Info -->

<% if flash.present? %>
    <% flash.each do |type, message| %>
        <% if type == "notice" %>
        <div class="alert alert-info alert-dismissible fade show text-center" role="alert">
        <% elsif type == "alert" %>
            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <% else %>                              
                 <div class="alert alert-<%= bootstrap_class_for(type) %> alert-dismissible fade show text-center" role="alert">
            <% end %>
                <span class="alert-inner--text"><b><%= message %></b></span>
                 <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>                              
        <% end %>
<% end %>

