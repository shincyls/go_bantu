<div class ="container mt-lg" id="border-box">

<h2 class="heading-title text-darker text-center">Sign up</h2>
  
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification style:"position:relative;"%>

  <div class="form-group">

    <%= f.input :username,
                input_html: {class: "form-inline form-control border-black mb-4",placeholder:"Username"}, label: false%>
  
<div class="form-inline d-flex justify-content-center">
  <div class="form-group mb-2">
    <%= f.input :first_name,
                input_html: {class: "form-control border-black mb-4",placeholder:"First Name"}, label: false%>
 
  </div>
  <div class="form-group mx-sm-5 mb-2">
    <%= f.input :last_name ,
                input_html: {class: "form-control border-black mb-4",placeholder:"Last Name"}, label: false  %>
  </div>
</div>

    <%= f.input :email,
                required: true,
                autofocus: true ,
                input_html: { class: "form-control border-black mb-4",autocomplete: "email",placeholder:"userdomain@email.com" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: {class: "form-control border-black mb-4", autocomplete: "new-password" ,placeholder:"123abcd"} %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: {class: "form-control border-black mb-4", autocomplete: "new-password" } %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Sign up" ,class:"btn-bantu"%>
  </div>
<% end %>
  


<div class="text-center">
  <%= render "devise/shared/links" %>
</div>


</div>